<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/AppCardView"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Gambar Berita -->
        <ImageView
            android:id="@+id/image_view_berita"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:srcCompat="@drawable/ic_placeholder_image"
            android:contentDescription="@string/cd_gambar_berita"
            android:background="?attr/colorSurface"/>

        <!-- Judul Berita -->
        <TextView
            android:id="@+id/text_view_judul_berita"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textColor="?attr/textColorPrimary"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/image_view_berita"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_favorite"
            app:layout_constraintHorizontal_bias="0.0"
            tools:text="Judul Berita yang Sangat Panjang Sekali Sampai Tidak Muat Lagi"/>

        <!-- Tombol Favorit -->
        <ImageButton
            android:id="@+id/button_favorite"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/cd_tombol_favorit"
            android:padding="8dp"
            app:layout_constraintTop_toTopOf="@id/text_view_judul_berita"
            app:layout_constraintBottom_toBottomOf="@id/text_view_judul_berita"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ic_baseline_favorite_border_24"
            app:tint="?attr/favoriteInactiveColor" /> <!-- Default state -->

        <!-- Tanggal Publikasi -->
        <TextView
            android:id="@+id/text_view_tanggal_publish"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textAppearance="?attr/textAppearanceCaption"
            android:textColor="?attr/textColorSecondary"
            app:layout_constraintTop_toBottomOf="@id/text_view_judul_berita"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="2025-06-03 03:05:57"/>

        <!-- Info Sumber -->
        <ImageView
            android:id="@+id/image_view_source_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/text_view_tanggal_publish"
            app:layout_constraintStart_toStartOf="parent"
            tools:srcCompat="@drawable/ic_placeholder_source_icon"
            android:contentDescription="@string/cd_ikon_sumber"/>

        <TextView
            android:id="@+id/text_view_source_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="?attr/textColorSecondary"
            app:layout_constraintTop_toTopOf="@id/image_view_source_icon"
            app:layout_constraintBottom_toBottomOf="@id/image_view_source_icon"
            app:layout_constraintStart_toEndOf="@id/image_view_source_icon"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Nama Sumber Berita"/>

        <!-- Kategori -->
        <TextView
            android:id="@+id/text_view_kategori"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textAppearance="?attr/textAppearanceCaption"
            android:textColor="?attr/textColorSecondary"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/image_view_source_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Kategori: Top, Nasional"
            tools:visibility="visible"/>

        <!-- Tombol Aksi -->
        <LinearLayout
            android:id="@+id/layout_tombol_aksi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/text_view_kategori"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_lihat_berita"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/label_lihat_berita"
                android:layout_marginEnd="4dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_rangkum_berita"
                style="?attr/materialButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/label_rangkum_berita"
                android:layout_marginStart="4dp"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>